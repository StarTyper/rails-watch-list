<div class="d-flex justify-content-center m-3">
  <div class="card p-3">
    <div class="p-3">
      <h3><%= @bookmark.comment %></h3>
    </div>
    <div class="d-flex mt-3">
      <div class="p-3">
        <p><%=  %></p>
      </div>
    </div>
    <div class="p-3" id="links">
      <%= link_to "All bookmarks", bookmarks_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_bookmark_path, class: "btn btn-success" %>
      <%= link_to "Delete", bookmark_path(@bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger" %>
    </div>
  </div>
</div>
